<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textNomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="produto"
        android:paddingTop="300dp"/>

    <TextView
        android:id="@+id/textDescricaoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint="descricao"
        android:paddingTop="200dp"/>

    <TextView
        android:id="@+id/textPrecoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint="preco"
        android:paddingTop="400dp"/>

    <TextView
        android:id="@+id/textEstoqueProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint="estoque"
        android:paddingTop="500dp"/>

    <ImageView
        android:id="@+id/imageViewSampleAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add_img" />

</androidx.constraintlayout.widget.ConstraintLayout>